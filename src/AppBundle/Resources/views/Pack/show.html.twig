{% extends 'AppBundle:Admin:base.html.twig' %}

{% block content -%}
<h1>Pack</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ entity.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Released</th>
                <td>{{ entity.dateRelease|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ entity.size }}</td>
            </tr>
            <tr>
                <th>Cycle</th>
                <td>{{ entity.cycle.name }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ entity.position }}</td>
            </tr>
        </tbody>
    </table>

        <a href="{{ path('admin_pack') }}" class="btn btn-default">
            Back to the list
        </a>
        <a href="{{ path('admin_pack_edit', { 'id': entity.id }) }}" class="btn btn-default">
            Edit
        </a>
        <form action="{{ path('admin_cycle_delete', { 'id': entity.id }) }}" method="post" style="display:inline-block">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
{% endblock %}
