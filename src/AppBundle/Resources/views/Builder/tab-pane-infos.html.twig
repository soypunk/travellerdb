
<!-- Notes Form -->
<div class="row">
	<div class="col-sm-12">
		<div class="form-group">
			<label for="tags_">{{ 'decks.edit.notes.tags.label' | trans}}</label>
			<input type="text" class="form-control" name="tags_" value="{{ deck.tags }}"></input>
			<span class="help-block">{{ 'decks.edit.notes.tags.hint' | trans | raw}}</span>
		</div>
		<div class="form-group">
			<label for="description_">{{ 'decks.edit.notes.notes.label' | trans}}</label>
			<textarea class="form-control" rows="20" name="description_" id="description" placeholder="{{ 'decks.edit.notes.notes.hint' | trans}}">{{ deck.descriptionMd }}</textarea>
		</div>
		<div class="well text-muted" id="description-preview">
			<small>Preview. Look <a href="http://daringfireball.net/projects/markdown/dingus">here</a> for a Markdown syntax reference.</small>
		</div>
	</div><!-- /.col-sm-12 -->
</div><!-- /.row -->
<!-- Notes Form -->
