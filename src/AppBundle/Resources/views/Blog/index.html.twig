{% extends 'AppBundle:Admin:base.html.twig' %}

{% block content -%}
    <div class="container">
    <h1>Blog list</h1>

    <table class="records_list table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_blog_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                        <a href="{{ path('admin_blog_show', { 'id': entity.id }) }}"  class="btn btn-default btn-sm">show</a>
                        <a href="{{ path('admin_blog_edit', { 'id': entity.id }) }}"  class="btn btn-default btn-warning btn-sm">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('admin_blog_new') }}"  class="btn btn-default btn-primary" role="button">
                Create a new entry
            </a>
    </div>
    {% endblock %}
