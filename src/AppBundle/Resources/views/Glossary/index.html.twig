{% extends 'AppBundle:Admin:base.html.twig' %}

{% block content -%}
    <div class="container">
    <h1>Glossary list</h1>

    <table class="records_list table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Keyword</th>
                <th>Text</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_glossary_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title|raw }}</td>
                <td>{{ entity.keyword|raw }}</td>
                <td>{{ entity.text|raw }}</td>
                <td>
                    <a href="{{ path('admin_glossary_show', { 'id': entity.id }) }}" class="btn btn-default btn-sm">show</a>
                    <a href="{{ path('admin_glossary_edit', { 'id': entity.id }) }}" class="btn btn-default btn-warning btn-sm">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('admin_glossary_new') }}" class="btn btn-default btn-primary" role="button">
                Create a new entry
            </a>
    </div>
    {% endblock %}
