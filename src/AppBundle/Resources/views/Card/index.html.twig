{% extends 'AppBundle:Admin:base.html.twig' %}

{% block content -%}
<h1>Card list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pack</th>
                <th>Position</th>
                <th>Code</th>
                <th>Faction</th>
                <th>Type</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_card_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.pack.name }}</td>
                <td>{{ entity.position }}</td>
                <td>{{ entity.code }}</td>
                <td>{{ entity.faction.name }}</td>
                <td>{{ entity.type.name }}</td>
                <td>{{ entity.name }}</td>
                <td>
                        <a href="{{ path('admin_card_show', { 'id': entity.id }) }}" class="btn btn-default btn-sm">show</a>
                        <a href="{{ path('admin_card_edit', { 'id': entity.id }) }}" class="btn btn-default btn-sm">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

            <a href="{{ path('admin_card_new') }}" class="btn btn-default">
                Create a new entry
            </a>
    {% endblock %}
