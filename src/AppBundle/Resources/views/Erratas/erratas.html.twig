{% extends 'AppBundle::layout.html.twig' %}
{% import "AppBundle::macros.html.twig" as macros %}

{% block body %}

    <div class="main white container">

        <div class="text-center">
            <ul class="pagination pagination-sm" style="margin-top:0">
                {% if prevurl is null %}
                    <li class="disabled"><a href="#">&laquo;</a></li>
                {% else %}
                    <li class=""><a href="{{ prevurl }}">&laquo;</a></li>
                {% endif %}
                {% for page in pages %}
                    {% if page.current %}
                        <li class="active"><a href="{{ page.url }}">{{ page.numero }} <span class="sr-only">(current)</span></a></li>
                    {% else %}
                        <li><a href="{{ page.url }}">{{ page.numero }}</a></li>
                    {% endif %}
                {% endfor %}
                {% if nexturl is null %}
                    <li class="disabled"><a href="#">&raquo;</a></li>
                {% else %}
                    <li class=""><a href="{{ nexturl }}">&raquo;</a></li>
                {% endif %}
            </ul>
        </div>

        <div class="erratas row">
            <div class="col-lg-8 col-lg-push-2">
                {% if erratas|length > 0 %}{% for i in 0..erratas|length-1 %}{% set errata = erratas[i] %}{% set card = errata.card %}
                    <div class="row" style="margin-bottom:1em;padding-bottom:1em;border-bottom:1px solid #ddd"><div class="col-lg-12">
                            <div class="errata-header">
                                <img src="/bundles/app/images/cards/{{ errata.card.code }}.png" alt="{{ errata.card.name }}" class="pull-right" style="width:100px;margin:0 0 10px 10px">
                                <h4 style="text-align:right"><a href="{{ path('cards_zoom',{card_code:errata.card.code}) }}#errata-{{ errata.id }}" data-code="{{ errata.card.code }}" class="card-name">{{ errata.card.name }}</a></h4>
                            </div>
                            <article class="errata" data-code="{{ errata.id }}" id="errata-{{ errata.id }}">
                                <div class="errata-like">
                                    <a id="errata-social-icon-like" href="#" class="social-icon-like" data-toggle="tooltip" data-placement="bottom" title="Like that errata">
                                        <span class="fa fa-heart"></span> <span class="num">{{ errata.nbVotes }}</span>
                                    </a>
                                </div>
                                <div class="errata-content">
                                    <div class="errata-text">
                                        {{ errata.textHtml|raw }}
                                    </div>
                                    <div class="errata-date">
                                        <time datetime="{{ errata.dateCreation|date('c') }}" title="{{ errata.dateCreation|date('F jS, Y') }}">{{ errata.dateCreation|date('n/j/y') }}</time>
                                    </div>
                                    <div class="errata-author">
                                        <a href="{{ path('user_profile_public', {user_id:errata.user.id,user_name:errata.user.username|e('url')}) }}" rel="author" class="username {{ errata.user.color }}">{{ errata.user.username }}</a>
                                        {% if errata.user.donation > 0 %}<span class="fa fa-gift donator" title="ThronesDB Gracious Donator"></span>{% endif %}
                                        <small class="reputation">{{ errata.user.reputation }}</small>
                                    </div>

                                    {% if errata.comments|length %}

                                        {% for comment in errata.comments %}
                                            <div class="errata-comment text-muted small">{{ comment.text|raw }}
                                                &mdash;
                                                <a title="{{ comment.user.reputation }} reputation" href="{{ path('user_profile_public', {user_id:comment.user.id,user_name:comment.user.username|e('url')}) }}" rel="author" class="username {{ comment.user.color }}">{{ comment.user.username }}</a>
                                                {% if comment.user.donation > 0 %}<span class="fa fa-gift donator" title="ThronesDB Gracious Donator"></span>{% endif %}
                                                <time datetime="{{ comment.dateCreation|date('c') }}" title="{{ comment.dateCreation|date('F jS, Y') }}">{{ comment.dateCreation|date('n/j/y') }}</time>
                                            </div>
                                        {% endfor %}

                                    {% endif %}
                                </div>
                            </article>
                        </div></div>
                {% endfor %}{% endif %}
            </div>
        </div>


        <div class="text-center">
            <ul class="pagination pagination-sm" style="margin:0">
                {% if prevurl is null %}
                    <li class="disabled"><a href="#">&laquo;</a></li>
                {% else %}
                    <li class=""><a href="{{ prevurl }}">&laquo;</a></li>
                {% endif %}
                {% for page in pages %}
                    {% if page.current %}
                        <li class="active"><a href="{{ page.url }}">{{ page.numero }} <span class="sr-only">(current)</span></a></li>
                    {% else %}
                        <li><a href="{{ page.url }}">{{ page.numero }}</a></li>
                    {% endif %}
                {% endfor %}
                {% if nexturl is null %}
                    <li class="disabled"><a href="#">&raquo;</a></li>
                {% else %}
                    <li class=""><a href="{{ nexturl }}">&raquo;</a></li>
                {% endif %}
            </ul>
        </div>

    </div>

{% endblock %}
